<%= form_for Url.new do |f| %>
  <div class="form-group">
    <%= f.label :content, "Enter a giant URL to generate a DwarfUrl" %>
    <%= f.text_field :content, autofocus: true, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :alias, "Choose an alias or let us generate a one for you !" %>
    <%= f.text_field :alias, autofocus: true, class: "form-control"  %>
  </div>
  <%= f.submit 'Generate DwarfUrl !' , class: 'btn btn-warning'  %>
<% end %>
