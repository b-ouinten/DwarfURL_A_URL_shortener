<%= form_for Url.new do |f| %>
  <div class="form-group">
    <%= f.label :url_content, "Enter your giant URL to generate a DwarfUrl" %>
    <%= f.text_field :url_content, autofocus: true, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :alias, "Enter an alias or let us generate a one for you !" %>
    <%= f.text_field :alias, autofocus: true, class: "form-control"  %>
  </div>
  <%= f.submit 'Generate DwarfUrl !' , class: 'btn btn-outline-success'  %>
<% end %>
