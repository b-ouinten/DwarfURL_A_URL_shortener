<div class="container-fluid mt-5">
  <h3 class="text-center">Those are all your urls</h3>
  <ul class="list-group">
    <% @urls.each do |url| %>
      <li class="list-group-item d-flex flex-column p-2">
        <div class="card alert-info mb-1">
          <div class="card-body p-2">
            <h6 class="title-card">Giant url</h6>
            <p class="text-card mb-0"><%= url.link %></p>
          </div>
        </div>
        <div class="card alert-success">
          <div class="card-body p-2">
            <h6 class="title-card">Dwarf url</h6>
            <%= link_to url.alias, url_path(url.id), class: 'text-card mb-0 text-decoration-none' %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
