<%= form_for Url.new, url: path do |f| %>
  <div class="form-group">
    <%= f.label :link, "Enter your giant URL to generate a DwarfURL" %>
    <%= f.text_field :link, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :_alias, "Enter an alias or let us generate a one for you !" %>
    <%= f.text_field :_alias, class: "form-control"  %>
  </div>
  <%= f.submit 'Generate DwarfURL !' , class: 'btn btn-outline-success'  %>
<% end %>
